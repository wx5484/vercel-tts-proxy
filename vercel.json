{
  "version": 2,
  "builds": [
    { "src": "api/tts.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/tts", "dest": "/api/tts.js" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/tts.js": {
      "maxDuration": 30
    }
  }
}
